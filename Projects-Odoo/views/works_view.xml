<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record model="ir.ui.view" id="works_form_view">
        <field name="name">works.form</field>
        <field name="model">projektai.works</field>
        <field name="arch" type="xml">
            <form string="Works Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="projektas_id"/>
                    </group>
                    <notebook>
                        <page string="Employees">
                            <label for="darbuotojas_ids"/>
                            <field name="darbuotojas_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="works_tree_view">
        <field name="name">Works.tree</field>
        <field name="model">projektai.works</field>
        <field name="arch" type="xml">
            <tree string="Works Tree">
                <field name="name"/>
                <field name="projektas_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="works_list_action">
        <field name="name">Works</field>
        <field name="res_model">projektai.works</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="works_menu" name="Works"
              parent="projects_menu"
              action="works_list_action"/>

</odoo>