<?xml version="1.0"?>
<odoo>

    <record model="ir.actions.act_window" id="act_project_graph">
        <field name="name">Participations by Project</field>
        <field name="res_model">projektai.project</field>
        <field name="view_mode">graph</field>
        <field name="view_id"
               ref="projektai.project_graph_view"/>
    </record>

    <record model="ir.actions.act_window" id="act_project_calendar">
        <field name="name">Projects</field>
        <field name="res_model">projektai.project</field>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="projektai.project_calendar_view"/>
    </record>

    <record model="ir.actions.act_window" id="act_project_list">
        <field name="name">Projects</field>
        <field name="res_model">projektai.project</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="board_project_form">
        <field name="name">Project Dashboard Form</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Project Dashboard">
                <board style="2-1">
                    <column>
                        <action
                                string="Participations by Project"
                                name="%(act_project_graph)d"
                                height="150"
                                width="510"/>
                        <action
                                string="Projects"
                                name="%(act_project_calendar)d"/>
                    </column>
                    <column>
                        <action
                                string="Projects"
                                name="%(act_project_list)d"/>
                    </column>
                </board>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="open_board_project">
        <field name="name">Projects Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_project_form"/>
    </record>

    <menuitem
            name="Session Dashboard" parent="configuration_menu"
            action="open_board_project"
            sequence="1"
            id="menu_board_session"/>

</odoo>