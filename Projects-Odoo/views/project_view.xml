<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record model="ir.ui.view" id="project_form_view">
        <field name="name">Project</field>
        <field name="model">projektai.project</field>
        <field name="arch" type="xml">
            <form string="Project Form">
                <header>
                    <button name="send_project_report"
                            string="Send info to Manager" type="object"
                            class="oe_highlight"
                            confirm="Send Project info to Manager?"/>
                    <field name="status" widget="statusbar" clickable="True"/>
                </header>
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="klientas_id"/>
                        <field name="vadovas_id"/>
                        <field name="employee_percentage" widget="progressbar"/>
                        <field name="image" widget="image"/>
                    </group>
                    <group string="Schedule">
                        <field name="start_date"/>
                        <field name="end_date"/>

                    </group>
                    <notebook>
                        <page string="Employees">
                            <label for="darbuotojas_ids"/>
                            <field name="darbuotojas_ids"/>
                        </page>
                        <page string="Works">
                            <label for="darbai_ids"/>
                            <field name="darbai_ids"/>
                        </page>
                        <page string="Invoices">
                            <label for="invoice_ids"/>
                            <field name="invoice_ids"/>
                        </page>
                        <page string="Documents">
                            <group>
                                <field name="document_ids" widget="one2many">
                                    <tree quick_create="true" editable="bottom">
                                        <field name="name"/>
                                        <field name="file" filename="name"/>
                                        <field name="comment"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="file" filename="name"/>
                                            <field name="comment"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="project_tree_view2">
        <field name="name">Project.tree</field>
        <field name="model">projektai.project</field>
        <field name="arch" type="xml">
            <tree string="Project Tree">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="klientas_id"/>
                <field name="employee_percentage" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <!-- calendar view -->
    <record model="ir.ui.view" id="project_calendar_view">
        <field name="name">project.calendar</field>
        <field name="model">projektai.project</field>
        <field name="arch" type="xml">
            <calendar string="Projects Calendar" date_start="start_date"
                      date_stop="end_date_calendar" color="vadovas_id">
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="project_graph_view">
        <field name="name">project.graph</field>
        <field name="model">projektai.project</field>
        <field name="arch" type="xml">
            <graph string="Participations by Project">
                <field name="name"/>
                <field name="employees_count" type="measure"/>
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="projects_kanban">
        <field name="name">project.kanban</field>
        <field name="model">projektai.project</field>
        <field name="arch" type="xml">
            <kanban default_group_by="vadovas_id">
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div
                                t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                            <div class="oe_dropdown_kanban">
                                <!-- dropdown menu -->
                                <div class="oe_dropdown_toggle">
                                    <!--                                    <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>-->
                                    <ul class="oe_dropdown_menu">
                                        <li>
                                            <a type="delete">Delete</a>
                                        </li>
                                        <li>
                                            <ul class="oe_kanban_colorpicker"
                                                data-field="color"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                            <div t-attf-class="oe_kanban_content">
                                Employees percentage
                                <field name="employee_percentage"
                                       widget="progressbar"
                                       style="width:100%;"/>
                                <!-- title -->
                                Project name:
                                <field name="name"/>
                                <br/>
                                Start date:
                                <field name="start_date"/>
                                <br/>
                                End date:
                                <field name="end_date"/>
                                <br/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record model="ir.actions.act_window" id="projects_action">
        <field name="name">Project</field>
        <field name="res_model">projektai.project</field>
        <field name="view_mode">tree,form,calendar,graph,kanban,pivot</field>
    </record>

    <menuitem id="main_projects_menu" name="My Projects"/>

    <menuitem id="projects_menu" name="Projects" parent="main_projects_menu"/>
    <menuitem id="projects_action_menu" name="Projects"
              parent="projects_menu" action="projects_action"/>


    <record model="ir.ui.view" id="wizard_form_view">
        <field name="name">wizard.form</field>
        <field name="model">projektai.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Employee">
                <group>
                    <field name="projektas_id"/>
                    <field name="darbuotojas_ids"/>
                </group>
                <footer>
                    <button name="subscribe" type="object"
                            string="Subscribe" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="launch_session_wizard"
                name="Add Employee"
                binding_model="projektai.project"
                res_model="projektai.wizard"
                view_mode="form"
                target="new"/>

</odoo>