<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record model="ir.ui.view" id="invoices_form_view">
        <field name="name">invoices.form</field>
        <field name="model">projektai.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice Form">
                <sheet>
                    <h1 style="text-align:center;">INVOICE</h1>
                    <h4 style="text-align:right;">Invoice ID:
                        <field
                                name="number"/>
                    </h4>
                    <h4 style="text-align:right;">Date:
                        <field
                                name="date"/>
                    </h4>
                    <h4 style="text-align:right;">Project:
                        <field
                                name="projektas_id"/>
                    </h4>


                    <div class="clearfix o_form_sheet">
                        <div class="o_group">
                            <table class="o_group o_inner_group o_group_col_6">
                                <group>
                                    <field name="our_company_name"/>
                                    <field name="company_ID"/>
                                    <field name="company_address"/>
                                </group>
                            </table>
                            <table class="o_group o_inner_group o_group_col_6">
                                <group>
                                    <field name="klientas_id"/>
                                    <field name="client_ID"/>
                                    <field name="client_address"/>
                                </group>
                            </table>
                        </div>
                    </div>


                    <field name="line_id">
                        <tree editable="True">
                            <field name="description"/>
                            <field name="quantity"/>
                            <field name="unite_price"/>
                            <field name="total_price"/>
                        </tree>
                        <form>
                            <group>
                                <field name="description"/>
                                <field name="quantity"/>
                                <field name="unite_price"/>
                                <field name="total_price"/>
                            </group>
                        </form>

                    </field>
                    <table class="o_group o_inner_group o_group_col_6">
                        <group style="display:flex; justify-content: flex-end;">

                            <field name="subtotal"/>
                            <field name="taxes"/>
                            <field name="total"/>

                        </group>
                    </table>
                </sheet>
            </form>
        </field>
    </record>

    <!-- invoice tree/list view -->
    <record model="ir.ui.view" id="invoice_tree_view">
        <field name="name">invoice.tree</field>
        <field name="model">projektai.invoice</field>
        <field name="arch" type="xml">
            <tree string="Invoice Tree">
                <field name="number"/>
                <field name="date"/>
                <field name="projektas_id"/>
                <field name="klientas_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="invoices_action">
        <field name="name">Invoices</field>
        <field name="res_model">projektai.invoice</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="invoices_action_menu" name="Invoices"
              parent="projects_menu" action="invoices_action"/>

</odoo>