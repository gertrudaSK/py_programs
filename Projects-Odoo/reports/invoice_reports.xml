<odoo>

    <report
            id="report_invoice"
            model="projektai.invoice"
            string="Invoice Report"
            name="projektai.report_invoice_view"
            file="projektai.report_invoice"
            report_type="qweb-pdf"/>
    <template id="report_invoice_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">


                        <div class="container">
                            <div class="card">
                                <div class="card-header">
                                    Invoice
                                    <strong>
                                        <span t-field="doc.date"/>
                                    </strong>
                                    <span class="float-right">
                                        <strong>Status:</strong>
                                        Pending
                                    </span>

                                </div>
                                <div class="card-body">
                                    <div class="row sm-2">
                                        <div class="col-3">
                                            <h6 class="mb">From:</h6>
                                            <div>
                                                <strong>
                                                    <span t-field="doc.our_company_name"/>
                                                </strong>
                                            </div>
                                            <div>
                                                <span
                                                        t-field="doc.company_ID"/>
                                            </div>
                                            <div>
                                                <span
                                                        t-field="doc.company_address"/>
                                            </div>
                                        </div>

                                        <div class="col">
                                            <h6 class="mb-3">To:</h6>
                                            <div>
                                                <strong>
                                                    <span
                                                            t-field="doc.klientas_id"/>
                                                </strong>
                                            </div>
                                            <div>
                                                <span
                                                        t-field="doc.client_ID"/>
                                            </div>
                                            <div>
                                                <span
                                                        t-field="doc.client_address"/>
                                            </div>
                                        </div>


                                    </div>

                                    <div class="table-responsive-sm">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Description</th>

                                                    <th class="right">Quantity

                                                    </th>
                                                    <th class="center">Unite
                                                        Price
                                                    </th>
                                                    <th class="right">Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="doc.line_id"
                                                   t-as="line">
                                                    <tr>
                                                        <td class="left">
                                                            <span
                                                                    t-field="line.description"/>
                                                        </td>

                                                        <td class="right">
                                                            <span
                                                                    t-field="line.quantity"/>
                                                        </td>
                                                        <td class="center">
                                                            <span
                                                                    t-field="line.unite_price"/>
                                                        </td>
                                                        <td class="right">
                                                            <span
                                                                    t-field="line.total_price"/>
                                                        </td>
                                                    </tr>
                                                </t>

                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4 col-sm-5">

                                        </div>

                                    </div>

                                    <div>
                                        <table style="margin: 0 0 0 80%;">
                                            <tbody>
                                                <tr>
                                                    <td style="padding: 10px;">
                                                        <strong style="font-weight: bold;">
                                                            Subtotal
                                                        </strong>
                                                    </td>
                                                    <td style="padding: 10px;">
                                                        <span
                                                                t-field="doc.subtotal"/>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td style="padding: 10px;">
                                                        <strong style="font-weight: bold;">
                                                            VAT (21%)
                                                        </strong>
                                                    </td>
                                                    <td style="padding: 10px;">
                                                        <span t-field="doc.taxes"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="padding: 10px;">
                                                        <strong style="font-weight: bold;">
                                                            Total (EUR)
                                                        </strong>
                                                    </td>
                                                    <td style="padding: 10px;">
                                                        <span
                                                                t-field="doc.total"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--                        <h2 t-field="doc.name"/>-->
                        <!--                        <p>Date <span t-field="doc.date"/> Client <span-->
                        <!--                                t-field="doc.klientas_id"/></p>-->
                        <!--                        <h3>Attendees:</h3>-->
                        <!--                        <ul>-->
                        <!--                            <t t-foreach="doc.attendee_ids" t-as="attendee">-->
                        <!--                                <li><span t-field="attendee.name"/></li>-->
                        <!--                            </t>-->
                        <!--                        </ul>-->
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>